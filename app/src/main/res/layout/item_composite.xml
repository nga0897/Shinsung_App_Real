<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/bgTitleLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/no"
                style="@style/textwhite"
                android:layout_marginLeft="4dp"/>
            <TextView
                android:id="@+id/type"
                android:layout_below="@+id/no"
                style="@style/textwhite"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
             />
            <TextView
                android:layout_below="@+id/type"
                android:id="@+id/code"
                style="@style/textwhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />



        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/nen_item"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <TextView
                android:padding="4dp"
                android:id="@+id/name"
                android:layout_toStartOf="@+id/im_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#282828"
                android:gravity="center_horizontal"/>
            <ImageView
                android:layout_below="@+id/name"
                android:id="@+id/title_from_to_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/from_to_purple" />

            <TextView
                android:id="@+id/start_dt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title_from_to_dots"
                android:layout_marginTop="-5dp"
                android:paddingVertical="4dp"
                android:layout_toEndOf="@+id/title_from_to_dots"
                android:layout_toRightOf="@+id/title_from_to_dots"
                android:ellipsize="marquee"
                style="@style/texthaitam"
                android:fadingEdge="horizontal"
                 />

            <ImageView
                android:id="@+id/title_from_to_dots_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/start_dt"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/title_from_to_dots"
                android:layout_toRightOf="@+id/title_from_to_dots"
                android:src="@color/contentDividerLine" />

            <TextView
                android:paddingVertical="4dp"
                android:id="@+id/end_dt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_from_to_dots_divider"
                android:layout_toEndOf="@id/title_from_to_dots"
                android:layout_toRightOf="@id/title_from_to_dots"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"

                style="@style/texthaitam" />
            <ImageView
                android:id="@+id/im_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:src="@drawable/ic_delete" />
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>