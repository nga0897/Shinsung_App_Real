<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorbackgound"
        android:orientation="vertical"
        android:weightSum="20"
        tools:context=".DMActivity">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="MMS"
            android:textColor="#fff"
            android:textSize="48sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="14">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/H1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="20dp"
                android:hint="ID"
                android:textColorHint="#fff"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:errorEnabled="true"
                app:boxCornerRadiusTopStart="8dp"
                app:boxBackgroundMode="outline"
                app:errorTextAppearance="@style/ErrorTextAppearance"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingVertical="16dp"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="8dp"
                    android:textColor="#fff" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/H2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/H1"
                app:errorEnabled="true"
                app:errorTextAppearance="@style/ErrorTextAppearance"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="16dp"
                android:hint="Password"
                android:textColorHint="#fff"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:passwordToggleTint="@android:color/white"
                app:boxStrokeColor="#fff"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:gravity="center_vertical"
                    android:paddingVertical="16dp"
                    android:imeOptions="actionDone"
                    android:paddingLeft="8dp"
                    android:textColor="#fff" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnLogin"
                style="@style/Widget.Shrine.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/H2"
                android:layout_alignEnd="@+id/H2"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="0dp"
                android:text="LOGIN"/>

<!--            <MaterialButton-->
<!--                android:id="@+id/btnsignup"-->
<!--                android:layout_width="100dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:layout_below="@+id/H2"-->
<!--                android:layout_alignEnd="@+id/H2"-->
<!--                android:layout_marginTop="4dp"-->
<!--                android:layout_marginEnd="0dp"-->


<!--                android:text="LOGIN"-->
<!--                android:textColor="#fff"-->
<!--                android:textStyle="bold" />-->
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/version"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:text="v-10"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="10sp">

    </TextView>

    <TextView
        android:id="@+id/tv_urlweb"
        android:layout_width="wrap_content"
        android:drawableRight="@drawable/ic_arrow"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_marginRight="16dp"
        android:layout_above="@+id/logo"
        android:background="@drawable/box_location_white"
        android:textColor="#fff"
        android:paddingVertical="8dp" />


    <TextView
        android:id="@+id/logo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:text="Autonsi"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignParentRight="true">

    </TextView>
</RelativeLayout>


