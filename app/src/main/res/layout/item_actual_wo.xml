<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:id="@+id/cardwo"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/bgTitleLeft">

            <TextView
                android:id="@+id/no"
                style="@style/textwhite"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp" />

            <TextView
                android:id="@+id/target"
                style="@style/textwhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/description"
                android:layout_below="@+id/no"
                android:gravity="center"
                android:textSize="24sp"
                android:text="2000" />

            <TextView
                android:id="@+id/description"
                style="@style/textwhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:padding="4dp"
                android:text="Kế hoạch tuần W05" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/title_from_to_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/atno"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/from_to_purple" />

            <TextView
                android:id="@+id/atno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-5dp"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:text="po"
                android:textColor="#282828"
                android:textSize="16sp" />

            <!--            <ImageView-->
            <!--                android:id="@+id/title_from_to_dots_divider"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="1dp"-->
            <!--                android:layout_below="@id/atno"-->
            <!--                android:layout_marginTop="5dp"-->
            <!--                android:layout_marginBottom="5dp"-->
            <!--                android:layout_toEndOf="@+id/title_from_to_dots"-->
            <!--                android:layout_toRightOf="@+id/title_from_to_dots"-->
            <!--                android:src="@color/contentDividerLine" />-->

            <TextView
                android:id="@+id/model_wo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title_from_to_dots"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@id/title_from_to_dots"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:text="product"
                android:textColor="#282828" />

            <TextView
                android:paddingTop="4dp"
                android:id="@+id/name_wo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/model_wo"
                android:layout_toEndOf="@id/title_from_to_dots"
                android:ellipsize="marquee"
                android:text="name"
                android:fadingEdge="horizontal"
                android:textColor="#282828" />
            <TextView
                android:paddingTop="4dp"
                android:id="@+id/code_wo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_wo"
                android:layout_toEndOf="@id/title_from_to_dots"
                android:ellipsize="marquee"
                android:text="code"
                android:fadingEdge="horizontal"
                android:textColor="#282828" />
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>