<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#E3E4E4"
        app:cardCornerRadius="8dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/e1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:padding="4dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="2dp"
                        app:cardBackgroundColor="#009688"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/no"
                            android:paddingHorizontal="4dp"
                            style="@style/texthaitam"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        style="@style/texthaitam"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/bb_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorxam" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="4dp">

                    <TextView
                        style="@style/texthaitam"

                        android:id="@+id/mt_cd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/e2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/e1"
                android:background="@color/colorxam" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/e2">

                <TextView
                    style="@style/texthaitam"
                    android:id="@+id/r1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="Quantity: " />

                <TextView
                    android:id="@+id/count_table2"
                    style="@style/texthaitam"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_toEndOf="@+id/r1"
                    />

                <TextView
                    style="@style/texthaitam"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_toStartOf="@+id/gr_qty"
                    android:text="Quantity Reality: " />

                <TextView
                    android:id="@+id/gr_qty"
                    style="@style/texthaitam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="4dp"
                   />

            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>